<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link rel="icon" href="/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="/./style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
  <body>
    <div class="container-fluid">
      <div class="container">
        <div class="row">
          <div class="col-10 mx-auto border shadow-lg bg-white rounded">
            <div class="row align-items-center">
              <div class="col-md-6">
                <div>
                  <img src="./image/leftImg.png" width="100%" alt="" />
                </div>
              </div>

              <div class="col-md-5">
                <div class="text-center">
                  <img src="./image/dmtlogo2.png" width="200" />
                </div>
                <form method="POST" action="/login">
                  <div class="mb-2">
                    <label for="exampleInputEmail1" class="form-label">User Name</label>
                    <input
                      type="text"
                      class="form-control"
                      id="email"
                      aria-describedby="emailHelp"
                      name="username"
                    />

                  </div>
                  <div class="mb-2">
                    <label
                      for="exampleInputPassword1"
                      class="form-label"
                    >Password</label>
                    <input
                      type="password"
                      class="form-control"
                      id="password"
                      name="password"
                    />
                  </div>
                  <div class="mb-3 d-flex justify-content-between">
                    <div class="form-group">
                      <div id="captcha"></div>
                    </div>
                    <i
                      class="fa fa-refresh mt-4 fs-5"
                      onclick="RefreshCode()"
                    ></i>
                    <input
                      type="text"
                      class="form-control w-50"
                      id="captchaInput"
                    />
                  </div>
                  <button
                    id="verifyButton"
                    disabled
                    class="btn btn-primary w-50"
                  >Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function RefreshCode() { window.location.href="/"; }; function
      generateCaptcha(length){ const characters
      ='ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789'; let
      captcha = ''; for (let i = 0; i < length; i++) { const randomIndex =
      Math.floor(Math.random() * characters.length); captcha +=
      characters.charAt(randomIndex); } return captcha; } const captchaDiv
      =document.getElementById('captcha'); const captcha = generateCaptcha(6);
      captchaDiv.innerText = captcha; const
      captchaInput=document.getElementById("captchaInput"); const
      verifyButton=document.getElementById("verifyButton");
      captchaInput.addEventListener('input', function() { if (captchaInput.value
      === captcha) { verifyButton.disabled = false;
      verifyButton.classList.remove('shake'); } else { verifyButton.disabled =
      true; verifyButton.classList.add('shake'); } });
    </script>
    <script src="./script.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>